{
  "compilerOptions": {
    "outDir": "./build", // Compiled files go here
    "rootDir": "./src", // Source files are located here
    "strict": true,
    "module": "commonjs",
    "target": "es6",
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
