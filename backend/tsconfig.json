{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "outDir": "./build", // Compiled files go here
    "rootDir": "./src", // Source files are located here
    "strict": true,
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "types": ["node", "jest"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
