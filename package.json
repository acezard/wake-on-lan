{
  "name": "wake-on-lan",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "expo:start": "npm --prefix mobile start -c",
    "expo:android": "npm --prefix mobile run android",
    "expo:ios": "npm --prefix mobile run ios",
    "mobile:build": "npm --prefix mobile run build",
    "mobile:publish": "npm --prefix mobile run publish",
    "dev:all": "npm-run-all --parallel dev expo:start",
    "prod:all": "npm run build:frontend && npm run build:backend && npm run start:backend",
    "dev": "npm-run-all --parallel watch:frontend dev:backend",
    "dev:backend": "nodemon --watch backend/src --exec ts-node backend/src/server.ts",
    "watch:frontend": "chokidar \"frontend/src/**/*\" -c \"npm run build:frontend\"",
    "build:backend": "tsc --project backend",
    "build:frontend": "npm run build --prefix frontend",
    "start": "npm run build:frontend && npm run build:backend && npm run start:backend",
    "start:backend": "node backend/dist/server.js"
  },
  "devDependencies": {
    "@types/chokidar": "^2.1.7",
    "@types/node": "^22.9.0",
    "chokidar": "^4.0.1",
    "chokidar-cli": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "ping": "^0.4.4"
  }
}